# Calculate E± for QWZ model
def qwz_eigenvalues(kx, ky, t0=t0):
    dx = np.sin(kx)
    dy = np.sin(ky)
    dz = t0 + np.cos(kx) + np.cos(ky)
    E = np.sqrt(dx**2 + dy**2 + dz**2)
    return np.array([+E, -E])


