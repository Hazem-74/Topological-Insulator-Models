# Helper function to add hopping
def add_hopping(H, a, b, M):
    H[a*2:(a+1)*2, b*2:(b+1)*2] += M
    H[b*2:(b+1)*2, a*2:(a+1)*2] += M.conj().T  # Hermitian conjugate

# k_y values
