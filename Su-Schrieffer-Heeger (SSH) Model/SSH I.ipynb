t2_values = np.arange(0.0, 1.01, 0.1)

# Set up figure and axes

fig, (ax1, ax2) = plt.subplots(1, 2, figsize=(14, 5))

# Dispersion Relation Setup
line_plus, = ax1.plot([], [], label=r'$E_+(k)$', color='blue')
